<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_dialog"
        android:layout_width="380dp"
        android:layout_height="332dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/text_clear"/>

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/iv_dialog"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dialog"
        app:layout_constraintStart_toStartOf="@+id/iv_dialog"
        app:layout_constraintEnd_toEndOf="@+id/iv_dialog"
        android:src="@drawable/user01_clear"/>

    <ImageView
        android:id="@+id/bt_close"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="@+id/iv_dialog"
        app:layout_constraintEnd_toEndOf="@id/iv_dialog"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dialog"
        android:src="@drawable/button_close"/>

</androidx.constraintlayout.widget.ConstraintLayout>